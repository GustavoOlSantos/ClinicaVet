<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import org.kordamp.ikonli.javafx.StackedFontIcon?>



<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistem.vet.controllers.cadastroController" spacing="15" alignment="CENTER">

    <!-- Contêiner para exibir os formulários lado a lado -->
    <HBox spacing="25" alignment="TOP_CENTER" styleClass="TableContente">

        <!-- Formulário do Cliente -->
        <VBox spacing="15" alignment="CENTER">
            <VBox spacing="5">
                <Label text="Nome do Cliente" styleClass="data-name" />
                <TextField fx:id="nomeField" promptText="Nome do Cliente" minWidth="300" minHeight="15"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="CPF/CNPJ" styleClass="data-name" />
                <TextField fx:id="cpfField" promptText="CPF/CNPJ" minWidth="300" minHeight="15"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Email" styleClass="data-name" />
                <TextField fx:id="emailField" promptText="Email" minWidth="300" minHeight="15"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Telefone" styleClass="data-name" />
                <TextField fx:id="telefoneField" promptText="Telefone" minWidth="300" minHeight="15"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Quantidade de Animais" styleClass="data-name" />
                <TextField fx:id="qtdAnimalField" promptText="Quantidade de Animais" minWidth="300" minHeight="15"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Forma de Pagamento" styleClass="data-name" />
                <TextField fx:id="formaPagamentoField" promptText="Forma de Pagamento" minWidth="300" minHeight="15"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Parcelas" styleClass="data-name" />
                <TextField fx:id="parcelasField" promptText="Número de Parcelas" minWidth="300" minHeight="15"/>
            </VBox>
        </VBox>

        <!-- Formulário do Animal -->
        <VBox spacing="15" alignment="CENTER">
            <VBox spacing="5">
                <Label text="Nome do Animal" styleClass="data-name" />
                <TextField fx:id="nomeAnimalField" promptText="Nome do Animal" minWidth="300" minHeight="15"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Sexo" styleClass="data-name" />
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="machoButton" text="Macho" minWidth="140" minHeight="15"/>
                    <Button fx:id="femeaButton" text="Fêmea" minWidth="140" minHeight="15"/>
                </HBox>
            </VBox>

            <VBox spacing="5">
                <Label text="Tipo (e.g., cachorro, gato)" styleClass="data-name" />
                <TextField fx:id="tipoField" promptText="Tipo (e.g., cachorro, gato)" minWidth="300" minHeight="15"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Emergência" styleClass="data-name" />
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="simButton" text="Sim" minWidth="140" minHeight="15"/>
                    <Button fx:id="naoButton" text="Não" minWidth="140" minHeight="15"/>
                </HBox>
            </VBox>

            <VBox spacing="5">
                <Label text="Orçamento" styleClass="data-name" />
                <TextField fx:id="orcamentoField" promptText="Orçamento Estimado" minWidth="300" minHeight="15"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Observações" styleClass="data-name" />
                <TextField fx:id="observacoesField" promptText="Observações" minWidth="300" minHeight="15"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Serviços" styleClass="data-name" />
                <TextField fx:id="servicosField" promptText="Serviços (e.g., consulta, vacinação)" minWidth="300" minHeight="15"/>
            </VBox>
        </VBox>

    </HBox>

    <!-- Botão Salvar para ambos -->
    <Button fx:id="btnSalvar" text="Salvar" onAction="#salvarCadastro" minWidth="300" minHeight="15"/>

</VBox>

